html 
  font-size 100px
.wrapper
  margin 1rem auto
  padding .05rem
  background rgba(73, 90, 128, .8)
  height 4.6rem
  width 4.6rem
  border-radius .06rem
  display flex
  flex-direction column
  justify-content space-around
  .row    
    display flex
    justify-content space-around
    .cell  
      background rgba(250,250,250,.3)
      height 1rem
      width 1rem
      border-radius .04rem
      text-align center
      line-height 1rem
      font-size .5rem 
.move   
  .movecell
    font-size .14rem
    height .6rem
    line-height .6rem
    text-align center
    width .8rem
    border-radius 4px
    background yellow 
    border 2px solid orange
    cursor pointer
  .top 
    margin 0 auto
    width 6rem
    .movecell 
      margin 0 auto
  .bottom
    margin 0 auto
    margin-top 20px
    display flex 
    justify-content center
    width 6rem
    .movecell
      margin 0 10px

@media screen and (max-width 800px)
  html 
    font-size 50px
    